<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search for student(s)"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:id="@+id/searchStudentTextView"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@+id/searchStudentTextView"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:inputType="text"
            android:hint="Enter RollNo/Name/Company"
            android:textSize="15sp"
            android:background="@drawable/edit_text_border"
            android:id="@+id/searchStudentEditText"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search by"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="100dp"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/searchStudentEditText"
            android:id="@+id/searchStudentByTextView"/>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/searchStudentByTextView"
            android:layout_marginStart="100dp"
            android:layout_marginTop="10dp"
            android:id="@+id/searchStudentByRadioGroup">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Roll No"
                android:id="@+id/rollNoRadioButton"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:layout_marginTop="-10dp"
                android:id="@+id/nameRadioButton"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Company"
                android:layout_marginTop="-10dp"
                android:id="@+id/companyRadioButton"/>

        </RadioGroup>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/searchStudentByRadioGroup"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="Search"
            android:backgroundTint="@color/blue"
            android:id="@+id/searchStudentByButton"/>

    </RelativeLayout>

</FrameLayout>