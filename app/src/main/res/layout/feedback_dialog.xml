<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:contentPadding="10dp"
        app:cardBackgroundColor="@color/light_grey"
        android:id="@+id/feedbackCardView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Feedback"
                android:layout_centerHorizontal="true"
                android:textColor="@color/dark_grey"
                android:textSize="15sp"
                android:textStyle="bold"
                android:id="@+id/feedbackTextView"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@+id/feedbackTextView"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:background="@drawable/edit_text_border"
                android:backgroundTint="@color/white"
                android:maxLength="200"
                android:hint="Enter feedback or tell us about the issue with the information shown in the app."
                android:textSize="15sp"
                android:textStyle="italic"
                android:textColor="@color/dark_grey"
                android:id="@+id/feedbackEditText"/>

            <Button
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_below="@+id/feedbackEditText"
                android:text="Submit"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/blue"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:id="@+id/feedbackSubmitButton"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>