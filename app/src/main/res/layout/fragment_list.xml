<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ListFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select the range for CTC(in lakhs)"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:id="@+id/selectCTCRangeTextView"/>

        <com.google.android.material.slider.RangeSlider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/selectCTCRangeTextView"
            android:layout_marginHorizontal="30dp"
            app:values="@array/ctcRangeValueArray"
            android:valueFrom="0.0"
            android:valueTo="30.0"
            android:stepSize="0.1"
            app:haloColor="@color/white"
            app:tickColor="@color/dark_grey"
            app:trackColor="@color/dark_grey"
            app:thumbColor="@color/dark_blue"
            android:id="@+id/ctcRangeSlider"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selected range [0-30] lpa"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/ctcRangeSlider"
            android:id="@+id/selectedCTCRangeTextView"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose branch"
            android:layout_marginStart="100dp"
            android:layout_below="@+id/selectedCTCRangeTextView"
            android:layout_marginTop="30dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:id="@+id/chooseBranchTextView"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="100dp"
            android:layout_below="@+id/chooseBranchTextView"
            android:layout_above="@+id/nextButton"
            android:layout_marginVertical="10dp"
            android:id="@+id/chooseBranchScrollView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/chooseBranchLinearLayout">
            </LinearLayout>

        </ScrollView>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"
            android:backgroundTint="@color/blue"
            android:id="@+id/nextButton"/>

    </RelativeLayout>

</FrameLayout>